        </BoxView>
        <BoxView Grid.Row="3" Grid.Column="1">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="GoOrderListView"
                                      NumberOfTapsRequired="1" />
            </BoxView.GestureRecognizers>
        </BoxView>
        <BoxView Grid.Row="3" Grid.Column="2">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="GoOrderListView"
                                      NumberOfTapsRequired="1" />
            </BoxView.GestureRecognizers>
        </BoxView>


    </Grid>
</ContentPage>