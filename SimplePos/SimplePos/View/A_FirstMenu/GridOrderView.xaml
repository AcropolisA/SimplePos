        <BoxView Grid.Row="2" Grid.Column="2">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="GoOrderListView"
                                      NumberOfTapsRequired="1" />
            </BoxView.GestureRecognizers>
        </BoxView>

        <BoxView Grid.Row="3" Grid.Column="0">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="GoOrderListView"
                                      NumberOfTapsRequired="1" />
