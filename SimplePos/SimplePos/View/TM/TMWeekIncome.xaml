<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimplePos.View.TMWeekIncome"
             Title="Week Income">
    
    <StackLayout>
        <Grid>
            <Label Text="모두 펼치기           "
                VerticalOptions="End" 
                HorizontalOptions="End" />
            <CheckBox HorizontalOptions="End"
                      VerticalOptions="End"/>
        </Grid>

        <Grid Padding="10">
            <BoxView BackgroundColor="AliceBlue" >
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnTapGestureGoDayTapped"
                                              NumberOfTapsRequired="1" />
                </BoxView.GestureRecognizers>
            </BoxView>
            <Label Text="날짜"
                   HorizontalOptions="Start"
                   VerticalOptions="Center"/>
            <Label Text="총 매출"
                   HorizontalOptions="End"
                   VerticalOptions="Center"/>
        </Grid>
    </StackLayout>
</ContentPage>